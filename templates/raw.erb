# /etc/raw 
# 
# The format of this file is:
# raw<N>:<blockdev>
#     
# example:
# ---------   
# raw1:hdb1
#
# this means: bind /dev/raw/raw1 to /dev/hdb1
#   
# ... 
<% @devices.sort.each do |number,device| %>
raw<%= number -%>:<%= device['raw_device'] -%><% end -%>
